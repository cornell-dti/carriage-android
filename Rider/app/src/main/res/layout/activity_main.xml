<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainAct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textHiRider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:gravity="left"
        android:text="@string/riderName"
        android:textColor="@color/black"
        android:textFontWeight='"bold" '
        android:textSize="@dimen/nameText"
        android:textStyle="bold"
        app:fontFamily='"SFProDisplay"'
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="170dp"

        app:srcCompat="@drawable/ic_dehaze_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textHiRider">

    </ImageView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/vertScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="28dp"
        android:layout_marginRight="@dimen/margin"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textHiRider">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textNextRide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nextRide"
                android:textColor="@color/darkerGrey"
                android:textFontWeight='"600"'
                android:textSize="@dimen/rideTextSize"
                android:textStyle="bold"
                app:fontFamily='"SFProDisplay"'
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/nextRideCard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/currRideHeight"
                android:layout_marginTop="@dimen/margin"
                app:cardCornerRadius="@dimen/cornerRadius"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textNextRide"
                android:elevation="@dimen/elevation">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/driverArrival"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:gravity="center"
                        android:paddingTop="@dimen/drivArrivalPad"
                        android:paddingBottom="@dimen/drivArrivalPad"
                        android:text="@string/driverArrival"
                        android:textColor="@color/whiteColor"
                        android:textSize="@dimen/drivArrivalTextSize"


                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></TextView>

                    <TextView
                        android:id="@+id/from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/nextRideInCardLeftMarg"
                        android:layout_marginTop="@dimen/nextRideInCardTopMarg"
                        android:text="@string/from"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/driverArrival"></TextView>

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="26dp"
                        app:layout_constraintLeft_toRightOf="@id/from"
                        app:layout_constraintRight_toLeftOf="@id/to"
                        app:layout_constraintTop_toBottomOf="@id/driverArrival"
                        app:srcCompat="@drawable/forward_arrow"></ImageView>

                    <TextView
                        android:id="@+id/to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/nextRideInCardTopMarg"
                        android:layout_marginRight="18dp"

                        android:text="@string/to"
                        app:layout_constraintLeft_toRightOf="@id/arrow"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/driverArrival" />

                    <TextView
                        android:id="@+id/currloc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/nextRideInCardLeftMarg"
                        android:text="@string/currLoc"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/black"

                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/from">

                    </TextView>

                    <TextView
                        android:id="@+id/finaldest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:text="@string/finalDest"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/black"

                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/to">


                    </TextView>

                    <ImageView
                        android:id="@+id/profpic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/nextRideInCardLeftMarg"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="@dimen/nextRideInCardTopMarg"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/currloc"
                        app:srcCompat="@drawable/prof_pic"></ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="24dp"
                        android:text="@string/driverName"
                        android:textSize="16dp"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/black"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/profpic"
                        app:layout_constraintTop_toBottomOf="@id/currloc">

                    </TextView>

                    <ImageView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="20dp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/profpic"
                        app:srcCompat="@drawable/phone">

                    </ImageView>

                    <TextView
                        android:id="@+id/textupcomingRides"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="20dp"
                        android:text="@string/driverNum"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/phone">

                    </TextView>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/upcomingRides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/upcomingRides"
                android:textColor="@color/darkerGrey"
                android:textFontWeight='"600"'
                android:textSize="@dimen/rideTextSize"
                android:textStyle="bold"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nextRideCard"></TextView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/upcomingRidesView"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/upcomingRides">

                <include
                    android:id="@+id/urcard1"
                    layout="@layout/upcoming_rides"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginRight="@dimen/margin">

                </include>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/rideHist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/rideHist"
                android:textColor="@color/darkerGrey"
                android:textFontWeight='"600"'
                android:textSize="@dimen/rideTextSize"
                android:textStyle="bold"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/upcomingRidesView">

            </TextView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rideHist">

                <include
                    layout="@layout/ride_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginRight="@dimen/margin">

                </include>

            </ScrollView>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
