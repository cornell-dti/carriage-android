<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profileColor"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/profileColor">

        <TextView
            android:id="@+id/profileHeader"
            style="@style/TextAppearance.MaterialComponents.Headline3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/profileColor"
            android:text="@string/your_profile"
            android:textColor="@color/blackColor"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/view_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profilePicture"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="@dimen/image_margin"
                        android:layout_marginTop="@dimen/image_margin"
                        android:layout_marginBottom="@dimen/image_margin"
                        android:src="@drawable/ic_person_black_24dp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/nameText"
                        style="@style/TextAppearance.MaterialComponents.Headline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/image_margin"
                        android:layout_marginTop="25dp"
                        android:drawableRight="@drawable/ic_settings_black_24dp"
                        android:drawablePadding="6dp"
                        android:text="Aiden Kim"
                        android:textColor="@color/blackColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dateJoinedText"
                        style="@style/TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/image_margin"
                        android:layout_marginTop="55dp"
                        android:text="Joined 06/2019" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/view_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/accountInfoText"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/image_margin"
                    android:text="@string/account_info"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/emailText"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_margin"
                        android:layout_marginLeft="@dimen/image_margin"
                        android:drawableLeft="@drawable/ic_email_black_24dp"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                        android:drawablePadding="@dimen/image_margin"
                        android:gravity="center_vertical"
                        android:text="yk568@cornell.edu">
                    </TextView>

                    <View
                        android:layout_width="303dp"
                        android:layout_marginLeft="56dp"
                        android:layout_marginRight="@dimen/text_margin"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/phoneText"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_margin"
                        android:layout_marginLeft="@dimen/image_margin"
                        android:drawableLeft="@drawable/ic_phone_black_24dp"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                        android:drawablePadding="@dimen/image_margin"
                        android:gravity="center_vertical"
                        android:text="+1 657-500-1311">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/view_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/personalInfoText"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/image_margin"
                    android:text="@string/personal_info"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/addressText"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_margin"
                        android:layout_marginLeft="@dimen/image_margin"
                        android:drawableLeft="@drawable/ic_person_black_24dp"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                        android:drawablePadding="@dimen/image_margin"
                        android:gravity="center_vertical"
                        android:text="He/Him/His">

                    </TextView>

                    <View
                        android:layout_width="303dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="56dp"
                        android:layout_marginRight="@dimen/text_margin"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/accessibilityText"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/text_margin"
                        android:layout_marginLeft="@dimen/image_margin"
                        android:drawableLeft="@drawable/ic_accessible_black_24dp"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                        android:drawablePadding="@dimen/image_margin"
                        android:gravity="center_vertical"
                        android:text="Accessibility">

                    </TextView>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>