<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/profileColor"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/CVSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/profileColor"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/settingsHeader"
            style="@style/TextAppearance.MaterialComponents.Headline3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/profileColor"
            android:contentDescription="@string/settings"
            android:text="@string/settings"
            android:textColor="@color/blackColor"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/CVAInfo"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/CVSettings">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profilePicture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="@dimen/image_margin"
                android:layout_marginTop="@dimen/image_margin"
                android:src="@drawable/ic_person_black_24dp"
                app:civ_border_color="#d3d3d3"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="#d3d3d3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sNameText"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="16dp"
                android:text="Aiden Kim"
                android:textColor="@color/blackColor"
                app:layout_constraintLeft_toLeftOf="@+id/profilePicture"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sPhoneText"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="32dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:drawablePadding="165dp"
                android:text="+1 657-500-1311"
                app:layout_constraintLeft_toLeftOf="@+id/profilePicture"
                app:layout_constraintTop_toTopOf="@id/sNameText" />

            <TextView
                android:id="@+id/sEmailText"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:text="yk568@cornell.edu"
                app:layout_constraintLeft_toLeftOf="@+id/profilePicture"
                app:layout_constraintTop_toTopOf="@id/sPhoneText" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CVLocations"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/view_margin"
        app:layout_constraintTop_toBottomOf="@+id/CVAInfo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/accountInfoText"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/image_margin"
                android:text="@string/locations"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"></TextView>


            <EditText
                android:id="@+id/homeText"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_margin"
                android:layout_marginLeft="@dimen/image_margin"
                android:layout_marginTop="@dimen/split_margin"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:drawablePadding="@dimen/image_margin"
                android:gravity="center_vertical"
                android:hint="@string/add_home"
                app:layout_constraintTop_toTopOf="parent"></EditText>

            <View
                android:id="@+id/locationSplit"
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_marginTop="75dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/homeText" />

            <EditText
                android:id="@+id/favoriteText"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_margin"
                android:layout_marginLeft="@dimen/image_margin"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_star_border_black_24dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:drawablePadding="@dimen/image_margin"
                android:gravity="center_vertical"
                android:hint="@string/add_favorites"
                app:layout_constraintTop_toTopOf="@id/locationSplit"></EditText>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/CVPrivacy"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/view_margin"
        app:layout_constraintTop_toBottomOf="@+id/CVLocations">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/privacyText"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_margin"
                android:text="@string/privacy"
                android:textColor="@color/blackColor"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/dataText"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_margin"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:drawablePadding="@dimen/image_margin"
                android:paddingBottom="15dp"
                android:text="@string/choose_what_data_you_share_with"
                android:textColor="@color/grayColor"
                app:layout_constraintTop_toBottomOf="@+id/privacyText"></TextView>

            <TextView
                android:id="@+id/legalText"
                style="@style/TextAppearance.MaterialComponents.Headline5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_margin"
                android:text="@string/legal"
                android:textColor="@color/blackColor"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/dataText"></TextView>

            <TextView
                android:id="@+id/termText"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/image_margin"
                android:layout_marginTop="5dp"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:drawablePadding="@dimen/image_margin"
                android:paddingBottom="15dp"
                android:text="@string/terms_of_service_privacy_policy"
                android:textColor="@color/grayColor"
                app:layout_constraintTop_toBottomOf="@+id/legalText"></TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button_sign_out"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/view_margin"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
        android:paddingLeft="150dp"
        android:paddingRight="170dp"
        android:text="@string/sign_out"
        android:textAlignment="center"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/CVPrivacy" />


</androidx.constraintlayout.widget.ConstraintLayout>