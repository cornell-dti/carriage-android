<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin"
    android:id="@+id/rideHistoryCard">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:cardCornerRadius="@dimen/cornerRadius"
            android:elevation="@dimen/elevation"
            android:layout_margin="@dimen/margin"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-black"
                    android:text="OCT"
                    android:textColor="@color/black"
                    android:textFontWeight="'900'"
                    android:textSize="@dimen/cardSizeUR"
                    android:layout_marginLeft="7dp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="18th"
                    android:textColor="@color/black"
                    android:textFontWeight="'900'"
                    android:textSize="@dimen/cardSizeUR"

                    app:layout_constraintLeft_toRightOf="@id/month"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-light"
                    android:text="12:00 PM"
                    android:textColor="@color/darkerGrey"
                    android:textFontWeight="'900'"
                    android:textSize="@dimen/cardSizeUR"

                    app:layout_constraintLeft_toRightOf="@id/day"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <TextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="@dimen/nextRideInCardTopMarg"
                    android:text="@string/from"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/month"></TextView>

                <ImageView
                    android:id="@+id/arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="26dp"
                    app:layout_constraintLeft_toRightOf="@id/from"
                    app:layout_constraintRight_toLeftOf="@id/to"
                    app:layout_constraintTop_toBottomOf="@id/day"
                    app:srcCompat="@drawable/forward_arrow"></ImageView>

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/nextRideInCardTopMarg"
                    android:layout_marginRight="18dp"

                    android:text="@string/to"
                    app:layout_constraintLeft_toRightOf="@id/arrow"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/time" />

                <TextView
                    android:id="@+id/currloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="@string/currLoc"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/from">

                </TextView>

                <TextView
                    android:id="@+id/finaldest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:text="@string/finalDest"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:layout_marginLeft="160dp"

                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/to"
                    app:layout_constraintLeft_toRightOf="@id/currloc">


                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:cardCornerRadius="@dimen/cornerRadius"
            android:elevation="@dimen/elevation"
            android:layout_margin="@dimen/margin"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/month1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-black"
                    android:text="OCT"
                    android:textColor="@color/black"
                    android:textFontWeight="'900'"
                    android:textSize="@dimen/cardSizeUR"
                    android:layout_marginLeft="7dp"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <TextView
                    android:id="@+id/day1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="18th"
                    android:textColor="@color/black"
                    android:textFontWeight="'900'"
                    android:textSize="@dimen/cardSizeUR"

                    app:layout_constraintLeft_toRightOf="@id/month1"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-light"
                    android:text="12:00 PM"
                    android:textColor="@color/darkerGrey"
                    android:textFontWeight="'900'"
                    android:textSize="@dimen/cardSizeUR"

                    app:layout_constraintLeft_toRightOf="@id/day1"
                    app:layout_constraintTop_toTopOf="parent">

                </TextView>

                <TextView
                    android:id="@+id/from1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="@dimen/nextRideInCardTopMarg"
                    android:text="@string/from"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/month1"></TextView>

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="26dp"
                    app:layout_constraintLeft_toRightOf="@id/from1"
                    app:layout_constraintRight_toLeftOf="@id/to1"
                    app:layout_constraintTop_toBottomOf="@id/day1"
                    app:srcCompat="@drawable/forward_arrow"></ImageView>

                <TextView
                    android:id="@+id/to1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/nextRideInCardTopMarg"
                    android:layout_marginRight="18dp"

                    android:text="@string/to"
                    app:layout_constraintLeft_toRightOf="@id/arrow1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/time1" />

                <TextView
                    android:id="@+id/currloc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="@string/currLoc"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/from1">

                </TextView>

                <TextView
                    android:id="@+id/finaldest1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:text="@string/finalDest"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/black"
                    android:layout_marginLeft="160dp"

                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/to1"
                    app:layout_constraintLeft_toRightOf="@id/currloc1">


                </TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>