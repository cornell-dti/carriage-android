<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rideHistoryCard">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cornerRadius"
        android:elevation="@dimen/elevation"
        android:layout_margin="@dimen/margin">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-black"
                android:text="OCT"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="@dimen/cardSizeUR"
                android:layout_marginLeft="7dp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="18th"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="@dimen/cardSizeUR"

                app:layout_constraintLeft_toRightOf="@id/month"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-light"
                android:text="12:00 PM"
                android:textColor="@color/darkerGrey"
                android:textFontWeight="900"
                android:textSize="@dimen/cardSizeUR"

                app:layout_constraintLeft_toRightOf="@id/day"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/fromLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="@dimen/nextRideInCardTopMarg"
                android:text="@string/from"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/month">

            </TextView>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="26dp"
                app:layout_constraintLeft_toRightOf="@id/fromLabel"
                app:layout_constraintRight_toLeftOf="@id/to"
                app:layout_constraintTop_toBottomOf="@id/day"
                app:srcCompat="@drawable/forward_arrow">

            </ImageView>

            <TextView
                android:id="@+id/toLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/nextRideInCardTopMarg"
                android:layout_marginRight="18dp"

                android:text="@string/to"
                app:layout_constraintLeft_toRightOf="@id/arrow"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time" />

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="@string/currLoc"
                android:textSize="18dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fromLabel">

            </TextView>

            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="@string/finalDest"
                android:textSize="18dp"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/black"
                android:layout_marginLeft="160dp"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toLabel"
                app:layout_constraintLeft_toRightOf="@id/from">


            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>