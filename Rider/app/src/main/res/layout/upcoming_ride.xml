<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    android:id="@+id/UpcomingRideCard">

    <androidx.cardview.widget.CardView
        android:id="@+id/cards"
        android:layout_width="293dp"
        android:layout_height="272dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="16dp"
        android:layout_marginRight="85dp"
        android:elevation="@dimen/elevation"
        app:cardCornerRadius="@dimen/cornerRadius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerUR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin">

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-black"
                android:text="OCT"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="@dimen/cardSizeUR"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="18th"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="@dimen/cardSizeUR"

                app:layout_constraintLeft_toRightOf="@id/month"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-light"
                android:text="12:00 PM"
                android:textColor="@color/darkerGrey"
                android:textFontWeight="900"
                android:textSize="@dimen/cardSizeUR"

                app:layout_constraintLeft_toRightOf="@id/day"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="18dp"

                app:layout_constraintLeft_toRightOf="@id/time"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/edit">

            </ImageView>

            <TextView
                android:id="@+id/fromLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:text="@string/from"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/month">

            </TextView>

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/finalDest"
                android:textColor="@color/black"
                android:textSize="18sp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fromLabel">

            </TextView>

            <TextView
                android:id="@+id/toLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="@string/to"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/from">

            </TextView>

            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/finalDest1"
                android:textColor="@color/black"
                android:textSize="18sp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toLabel">


            </TextView>

            <TextView
                android:id="@+id/confirmationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:text="@string/confirmation"
                android:textColor="@color/green"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/to">

            </TextView>

            <ImageView
                android:id="@+id/pictureIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="@dimen/nextRideInCardTopMarg"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/confirmationLabel"
                app:srcCompat="@drawable/prof_pic">

            </ImageView>

            <TextView
                android:id="@+id/driver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="38dp"
                android:fontFamily="sans-serif-light"
                android:text="Adam Denisov"
                android:textColor="@color/black"
                android:textSize="15sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/pictureIcon">

            </TextView>

            <ImageView
                android:id="@+id/phoneIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="20dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/pictureIcon"
                app:srcCompat="@drawable/phone">

            </ImageView>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:text="+1 123 456 7890"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/phoneIcon">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>