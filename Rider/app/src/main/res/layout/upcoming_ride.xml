<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7pt"
    android:background="@drawable/rectangle"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:elevation="20dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="OCT 18th"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textDate"
        android:text="12:00 PM"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/textTime"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/textTime"
        app:srcCompat="@android:drawable/ic_input_get" />

    <TextView
        android:id="@+id/textFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDate"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="From"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textFromPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textFrom"
        android:layout_marginLeft="20dp"
        android:text="Uris Hall"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textFromPlace"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="To"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textToPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTo"
        android:layout_marginLeft="20dp"
        android:text="Cascadilla Hall"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textRideStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textToPlace"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Ride Confirmed"
        android:textColor="#4CAF50"
        android:textSize="8sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageRider"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/textRideStatus"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/person" />

    <TextView
        android:id="@+id/textRiderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textRideStatus"
        android:layout_alignTop="@id/imageRider"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/imageRider"
        android:text="Adam Denisov"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textRiderName"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imageRider"
        android:text="+1 123-456-7890"
        android:textSize="12sp" />
</RelativeLayout>